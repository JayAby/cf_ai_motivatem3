---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="MotivateM3">
  <div class="main-card">
    <h2 class="mb-4 text-center">Today's Motivation</h2>

    <form id="motivationForm">
      <div class="mb-3">
        <label for="feeling" class="form-label">How are you feeling?</label>
        <input
          type="text"
          id="feeling"
          name="feeling"
          class="form-control"
          placeholder="e.g., tired, happy"
          required
        />
      </div>

      <div class="mb-3">
        <label for="goal" class="form-label">What do you want to accomplish today?</label>
        <input
          type="text"
          id="goal"
          name="goal"
          class="form-control"
          placeholder="e.g., finish my project"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary w-100">MotivateME</button>

      <div id="spinner" class="mt-3 text-center" style="display:none;">
        <div class="spinner-border text-light" role="status">
          <span class="visually-hidden">Generating motivation...</span>
        </div>
        <p class="mt-2">Generating motivation...</p>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById("motivationForm");
    const spinner = document.getElementById("spinner");

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      spinner.style.display = "block";
      // weâ€™ll connect this to your Worker API next
      setTimeout(() => (spinner.style.display = "none"), 600);
    });
  </script>
</BaseLayout>
